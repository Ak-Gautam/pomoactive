{
    "manifest_version": 3,
    "name": "Pro Pomodoro",
    "version": "1.0",
    "description": "A Pomodoro technique extension",
    "permissions": ["notifications", "storage"],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "scripts/popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/pro.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/pro.png"
    }
  }
  